<div class="full-page space-top row collapse">
  <%= link_to '<< Back', admin_infos_path %>
  <div class="space-top">
    <%= simple_form_for [:admin, @info] do |f| %>
      <%= f.error_notification %>
      <%= f.input :name, required: true %>
      <%= f.input :permalink %>
      <%= f.text_area :content, :cols => "30", :rows => "15"%>
      <%= f.button :submit, class: "button small round green" %>
    <% end %>
  </div>
</div>
